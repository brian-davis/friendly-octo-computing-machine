<p style="color: green"><%= notice %></p>


<div id="quotes-index"
     data-controller="sortable"
     data-sortable-request-helper-outlet=".request-helper"
     data-sortable-endpoint-value="<%= work_quotes_path(@work) %>">
  <b>Quotes for <%= @work.title %></b>
  <div class="outline">
    <%= text_field_tag(:search, nil, class: "search-box", data: { sortable_target: "search"}) %>
    <%= link_to("Search", "#", class: "search-button", data: { action: "click->sortable#search" }) %>
    <hr>


  </div>

  <ul id="quotes">
    <%= render("quotes") %>
  </ul>
</div>

<div class="nav-links outline">
  <%= link_to "Back to Book", @work, class: "nav-button" %>
  <%= link_to "New quote", new_work_quote_path(@work), class: "nav-button nav-action" %>
</div>