<%= form_with(model: [@work, quote], html: { class: "table-form" }) do |form| %>
  <%= render("shared/form_errors", form: form) %>

  <%= form.label(:page) %>
  <%= form.number_field(:page, class: "correct-width") %>

  <%= form.label(:section) %>
  <%= form.text_field(:section, class: "correct-width") %>

  <%= form.label(:text) %>
  <%= form.text_area(:text) %>

  <hr>
  <hr>
  <%= form.submit %>
<% end %>