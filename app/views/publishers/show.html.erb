<div id="<%= dom_id @publisher %>">
  <b class="minor-heading"><%= @publisher.name %></b>
  <p><%= @publisher.country_name %></p>

  <div class="outline">
    <b>Works</b> <span class="quantity"><%= @publisher.works_count %></span>
    <div class="associated-items" class="scrollable">
      <%= render("shared/alternating_list", collection: @publisher_works) %>
    </div>
  </div>
</div>
<hr>
<div class="nav-links" data-controller="confirmable">
  <%= link_to "Back to Publishers", publishers_path, class: "nav-button" %>
  <%= link_to "Back to Top", root_path, class: "nav-button" %>
  <%= link_to "Edit", edit_publisher_path(@publisher), class: "nav-button nav-action-safe" %>
  <%= html_delete_button @publisher, "Destroy" %>
</div>