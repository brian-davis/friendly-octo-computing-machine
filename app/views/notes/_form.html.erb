<%= form_with(model: [@notable, note], html: { class: "table-form" }, data: { turbo: false }) do |form| %>
  <%= render("shared/form_errors", form: form) %>
  <%= form.label :text, style: "display: block" %>
  <%= form.text_area :text, style: "height: 400px;" %>
  <hr>
  <hr>
  <%= form.submit %>
<% end %>
