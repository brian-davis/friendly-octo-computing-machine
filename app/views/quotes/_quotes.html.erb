<% if @quotes.empty? %>
  <div class="div-list-row empty-list">EMPTY</div>
<% else %>
  <% @quotes.each do |quote| %>
    <%= tag.div(**{ class: cycle("div-list-row", "div-list-row alt-row") }) do %>
      <i class="small-text">p. <%= [quote.page, quote.custom_citation].map(&:presence).compact.join(", ") %></i>:
      <%= quote.text.truncate(100) %>
     
      <%= pipe_spacer %>
      <%= pointer_link([@work, quote]) %>
    <% end %>
  <% end %>
<% end %>