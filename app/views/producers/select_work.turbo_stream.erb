          <b style="font-size:smaller">Role: </b><%= t.select(:role, options_for_select(WorkProducer.roles.keys)) %>
        </div>

        <div class="subform-line">
          <span data-action="click->dismissable#formDismiss" style="cursor: pointer; "><b style="font-size:smaller">â“§</b> <b style="font-size: smaller; color: red; position:relative; bottom: 1px">cancel</b></span>
