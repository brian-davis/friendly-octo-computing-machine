<%= form_with(model: @producer) do |form| %>
  <%= turbo_stream.append "new_works_list" do %>
    <li class="appendedWorkFormContainer">
      <%= form.fields_for :work_producers, @producer.work_producers.build do |t| %>
        <%= t.label :role %>
        <%= t.select(:role, options_for_select(WorkProducer.roles.keys)) %>

        <div data-works-target="appendedWorkForm subForm">
          <%= t.fields_for :work_attributes, t.object.build_work do |tt| %>
            <%= tt.label :title %>
            <%= tt.text_field :title %>
          <% end %>

          <span data-action="click->producers#formDismiss" style="cursor: pointer">cancel â“§</span>
        </div>
      <% end %>
    </li>
  <% end %>
<% end %>