<div id="<%= dom_id work %>">
  <b>
    <%= title_line(work) %>
  </b>

  <p class="small-text indented">
    Also known as <%= alternate_title_line(work).html_safe %>
  </p>

  <p>
    <%= byline(work) %>
  </p>

  <p>
    <%= [work.publisher&.name, work.year_of_publication].compact.join(", ") %>
  </p>

  <b>Authors</b>
  <ul>
    <% if work.work_producers.empty? %>
      <span class="empty-list">EMPTY</span>
    <% else %>
      <% work.work_producers.each do |wp| %>
        <li>
          <i><%= wp.role.capitalize %></i>: <%= link_to wp.producer.name, wp.producer, class: "index-link" %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
