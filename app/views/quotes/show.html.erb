<div id="<%= dom_id @quote %>" class="outline">
  <% if @quote.custom_citation.present? %>
    <b class="label-above small-text">Custom Citation</b>
    <div class="book-card outline bibliography-citation small-text">
      <%= markdown_render(@quote.custom_citation) %>
    </div>
  <% end %>

  <% if @long_citation %>
    <b class="label-above small-text">Long Citation</b>
    <div class="book-card outline bibliography-citation small-text">
      <%= markdown_render(@long_citation) %>
    </div>
  <% end %>

  <% if @short_citation %>
    <b class="label-above small-text">Short Citation</b>
    <div class="book-card outline bibliography-citation small-text">
      <%= markdown_render(@short_citation) %>
    </div>
  <% end %>

  <b class="label-above small-text">Quote</b>
  <div class="quote-card outline">
    <%= markdown_render(@quote.text) %>
  </div>
</div>
<hr>
<div class="nav-links" data-controller="confirmable">
  <%= link_to "Back to Book Quotes", work_quotes_path(@work), class: "nav-button" %>
  <%= link_to "Back to All Quotes", quotes_path, class: "nav-button" %>
  <%= link_to "Edit this Quote", edit_work_quote_path([@work, @quote]), class: "nav-button nav-action-safe" %>
  <%= html_delete_button [@work, @quote], "Destroy this Quote" %>
</div>