<%=
  text_field_tag(:search, nil, {
    class: "search-box",
    data: {
      action:"keydown.esc->sortable#clearSearch",
      sortable_target: "search"
    }
  })
%>

<%=
  link_to("Search", "#", {
    class: "search-button",
    data: {
      sortable_target:"searchButton",
      action: "click->sortable#search"
    }
  })
%>

<%= pipe_spacer %>

<%=
  select_tag("_order", options_for_select(@sort_options), {
    class: "select-button small-text",
    include_blank: "Sort",
    data: { action: "change->sortable#selectOrder" }
  })
%>

