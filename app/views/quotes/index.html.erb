<div id="quotes-index"
     data-controller="sortable"
     data-sortable-request-helper-outlet=".request-helper"
     data-sortable-endpoint-value="<%= work_quotes_path(@work) %>"
     data-action="keydown.enter->sortable#submitSearch">

  <b class="minor-heading">Quotes for <span class="work-title-alt"><%= @work.title %></span></b>
  <hr>
  <%= text_field_tag(:search, nil, class: "search-box", data: { action:"keydown.esc->sortable#clearSearch", sortable_target: "search"}) %>
  <%= link_to("Search", "#", class: "search-button", data: { sortable_target:"searchButton", action: "click->sortable#search" }) %>
  <hr>

  <%# index.turbo_stream.erb %>
  <div id="quotes" class="scrollable">
    <%= render "shared/alternating_list", collection: @quotes %>
  </div>
</div>
<hr>
<div class="nav-links">
  <%= link_to "Back to Book", @work, class: "nav-button" %>
  <%= link_to "Back to All Quotes", quotes_path, class: "nav-button" %>
  <%= link_to "Back to Top", root_path, class:"nav-button" %>
  <%= link_to "New Quote", new_work_quote_path(@work), class: "nav-button nav-action-safe" %>
</div>