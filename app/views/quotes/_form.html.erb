<%= form_with(model: [@work, quote], html: { class: "table-form" }, data: { turbo: false }) do |form| %>
  <%= render("shared/form_errors", form: form) %>

  <%= form.label(:page) %>
  <%= form.number_field(:page, class: "correct-width") %>

  <%= form.label(:custom_citation, "Custom Citation (Markdown)", class: "small-text") %>
  <%= form.text_field(:custom_citation, class: "correct-width") %>

  <%= form.label(:text) %>
  <%= form.text_area(:text) %>

  <hr>
  <hr>
  <%= form.submit %>
<% end %>