<p style="color: green"><%= notice %></p>

<div class="outline">
  <%= render @publisher %>

  <b>Books</b>
  <div class="associated-items">
    <% if @publisher.works.empty? %>
      <div class="div-list-row empty-list">EMPTY</div>
    <% else %>
      <% @publisher.works.order(:title).each.with_index do |work, i| %>
        <% class_list = ["div-list-row"]; class_list << "alt-row" if i.even? %>
        <%= tag.div(**{ class: class_list }) do %>
          <%= work.title %> |
          <%= link_to "ðŸ‘‰", work, class: "index-link" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
<hr>
<div class="nav-links" data-controller="confirmable">
  <%= link_to "Back to publishers", publishers_path, class: "nav-button" %>
  <%= link_to "Back to top", root_path, class: "nav-button" %>
  <%= link_to "Edit this publisher", edit_publisher_path(@publisher), class: "nav-button nav-action" %>
  <%= html_delete_button @publisher, "Destroy this publisher" %>
</div>