<p style="color: green"><%= notice %></p>

<div id="publishers-index" data-controller="sortable" data-sortable-request-helper-outlet=".request-helper">
  <h1>Publishers</h1>

  <div class="outline" data-controller="publishers">
    <%=
    select_options = [
      ["Name ▲", "name-asc"],
      ["Name ▼", "name-desc"],
      ["works count ▲", "works_count-asc"],
      ["works count ▼", "works_count-desc"]
    ]
    select_tag(
      "_order",
      options_for_select(select_options), {
        class: "select-button small-text",
        include_blank: "Sort",
        data: {
          action: "change->sortable#selectOrder",
          action_url: "/publishers"
        }
      })
    %>

    <ul id="publishers">
      <%= render("publishers") %>
    </ul>
  </div>

  <div class="nav-links outline">
    <%= link_to "Back to top", root_path, class:"nav-button" %>
    <%= link_to "New publisher", new_publisher_path, class: "nav-button nav-action"  %>
  </div>
</div>
