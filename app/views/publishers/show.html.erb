<p style="color: green"><%= notice %></p>

<div class="outline">
  <%= render @publisher %>

  <b>Books</b>
  <ul class="associated-items">
    <% if @publisher.works.empty? %>
      <span class="empty-list">EMPTY</span>
    <% else %>
      <% @publisher.works.order(:title).each do |work| %>
        <li>
          <%= link_to work.title, work, class: "index-link" %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<div class="nav-links outline">
  <%= link_to "Edit this publisher", edit_publisher_path(@publisher), class: "link-button" %> |
  <%= link_to "Destroy this publisher", @publisher, method: :delete, class: "link-button", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> |
  <%= link_to "Back to publishers", publishers_path, class: "nav-button" %> |
  <%= link_to "Back to top", root_path, class: "nav-button" %>
</div>