<%= form_with(model: publisher, html: { class: "table-form" }) do |form| %>
  <%= render("shared/form_errors", form: form) %>

  <%= form.label :name %>
  <%= form.text_field :name, { placeholder: "name required" } %>

  <%= form.label :location %>
  <%= form.select :location, options_for_select(@country_options, @publisher.location), { prompt: "Select Country" } %>

  <%= form.submit %>
<% end %>
