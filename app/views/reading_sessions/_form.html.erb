<%= form_with(**{
  model: [@work, reading_session],
  html: { class: "table-form" },
  data: { turbo: false }
  }) do |form| %>

  <%= render("shared/form_errors", form: form) %>

  <%= form.label :started_at, style: "display: block" %>
  <%= form.datetime_field :started_at %>

  <%= form.label :ended_at, style: "display: block" %>
  <%= form.datetime_field :ended_at %>

  <%= form.label :pages, style: "display: block" %>
  <%= form.number_field :pages, min: 1 %>

  <hr>
  <hr>

  <%= form.submit("Create Reading Session") %>
<% end %>
