<% if @quotes.empty? %>
  <span class="empty-list">EMPTY</span>
<% else %>
  <% @quotes.each_with_index do |quote, i| %>
    <% class_list = ["div-list-row"]; class_list << "alt-row" if i.even? %>
    <%= tag.div(**{ class: class_list }) do %>
      <div><%= full_title_line(quote.work) %></div>
      <i><%= quote.text.truncate(100) %></i>
      <% quote_resource = [quote.work, quote] %>
      <div>
        <%= link_to "ðŸ‘‰", quote_resource, class: "index-link" %>
      </div>
    <% end %>
  <% end %>
<% end %>